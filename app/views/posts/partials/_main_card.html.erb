<div class="card-main-post mb-4">
  <div class="card-main-post-thumbnail">
    <%= link_to post_path(post) do %>
      <picture>
          <source srcset="<%= cl_image_path post.thumbnail.key, width: 768, height: 768, crop: :fill, quality: 100 %> 1x, <%= cl_image_path post.thumbnail.key, width: 1536, height: 1536, crop: :fill, quality: 100 %> 2x" media="(max-width: 767.98px)">
          <source srcset="<%= cl_image_path post.thumbnail.key, width: 1140, height: 600, crop: :fill, quality: 100 %>" media="(min-width: 768px)">
          <%= cl_image_tag post.thumbnail.key, width: 1140, height: 600, crop: :fill, quality: 100, alt: post.title %>
        </picture>
    <% end %>
  </div>
  <div class="card-main-post-content p-4 pt-0">
    <time class="text-uppercase fw-light mb-1 d-block w-fit"><%= post.date %></time>
    <h2 class="card-post-title m-0 lh-base"><%= link_to post.title, post_path(post) %></h2>
  </div>
</div>
